<form
    style="display: flex; flex-direction:column;justify-content: center; align-items: center; min-height: 10vh; margin:auto;padding:auto"
    action="/formulario" method="post">

    <div style="display: flex ; flex-direction:column; width: 30%;">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="usuario_nome" style="border-radius:10px ; padding:10px" />
    </div>

    <div style="display: flex ; flex-direction:column;width: 30%; ; ">
        <label for="email">E-mail:</label>
        <input type="email" id="email" name="usuario_email" style="border-radius:10px ; padding:10px" />
    </div>

    <div style="display: flex ; flex-direction:column;width: 30%; ">
        <label for="msg">Mensagem:</label>
        <textarea id="msg" name="usuario_msg" style="border-radius:10px;  padding:10px "></textarea>
    </div>

    <div style="padding:10px">
        <button type="submit" style="border-radius:10px;  padding:10px; border:none">Enviar sua mensagem</button>
    </div>

</form>